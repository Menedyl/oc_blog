{% extends 'layout.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ css('Post/post') }}">
    <link rel="stylesheet" href="{{ css('Post/carousel') }}"
{% endblock %}


{% block body %}

    <div class="row">

        <div class="col-md-push-4 col-md-6">
            <h3 id="post_title">{{ post.title }}</h3>
        </div>

    </div>


    <div class="row">

        <div class="col-md-push-2 col-md-10">
            {% include 'Post/carousel.twig' %}
        </div>

    </div>

    <div class="row">

        <div class="col-md-push-1 col-md-12">

            <div class="row">

                <p id="post_url">
                    Lien du site : <a href="{{ post.url }}">{{ post.url }}</a>
                </p>

            </div>

            <div class="row">
                <p id="post_content">{{ post.content }}</p>
            </div>

            <div class="row">

                <div class="col-md-4">
                    <p id="post_author">{{ post.author }}</p>
                    <p id="post_dateUpdate">Mis à jour le : {{ post.dateUpdate|date('d/m/Y à H:i') }}</p>
                </div>

                <div class="col-md-push-7 col-md-1">
                    <a id="post_btn_update" href="{{ path('post_edit', {'id' : post.id} ) }}" type="button" class="btn btn-primary">Modifier</a>
                </div>

            </div>

        </div>

    </div>




{% endblock %}